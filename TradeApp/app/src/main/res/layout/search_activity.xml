<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/webBg"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:childSpacing="auto"
    app:childSpacingForLastRow="align"
    app:flow="true"
    app:rowSpacing="8dp">

    <RelativeLayout
        android:id="@+id/margin_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="21.5dp"
        android:gravity="center">

        <EditText
            android:id="@+id/search2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/cancel"
            android:background="@drawable/edit_view_bg"
            android:drawableLeft="@mipmap/ico_search"
            android:hint="搜索你喜欢的宝贝"
            android:imeOptions="actionSearch"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/text_btn_bg"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="热门搜索"
            android:textSize="16sp" />

        <com.shhb.gd.shop.view.FlowLayout
            android:id="@+id/search_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:childSpacing="auto"
            app:childSpacingForLastRow="align"
            app:flow="true"
            app:rowSpacing="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="历史记录"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cleared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/text_btn_bg"
                android:padding="6dp"
                android:text="清除"
                android:textSize="16sp" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/history_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:clipToPadding="false" />
    </LinearLayout>
</LinearLayout>
