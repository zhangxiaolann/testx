<?xml version="1.0" encoding="utf-8"?><!-- 上下滑入式 -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1.动画持续0.2秒 -->
    <!-- 2.动画起始时 X坐标上的位置 -->
    <!-- 3.动画结束时 X坐标上的位置 -->
    <translate
        android:duration="150"
        android:fromYDelta="-100%"
        android:toYDelta="0" />
