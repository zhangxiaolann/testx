<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--按下的颜色-->
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <size
                android:width="20dp"
                android:height="20dp"/>
            <solid android:color="@color/gray" />
        </shape>
    </item>

    <!--松开的颜色-->
    <item android:state_enabled="false">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <size
                android:width="20dp"
                android:height="20dp"/>
            <solid android:color="@color/bTransparent" />
        </shape>
    </item>

    <!--默认的颜色-->
    <shape
        android:shape="oval"
        android:useLevel="false">
        <padding
            android:bottom="2dp"
            android:left="2dp"
            android:right="2dp"
            android:top="2dp" />
        <size
            android:width="20dp"
            android:height="20dp"/>
        <solid android:color="@color/bTransparent" />
    </shape>

</selector>